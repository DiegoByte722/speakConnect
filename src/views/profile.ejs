<%- layout('layouts/main') %>
    <div class="container vh-100">
        <h1>Perfil de usuario</h1>
        <div class="card col-auto mt-4 text-bg-light" style="width: 50rem;">
            <div class="card-header">
                <h3>Usuario:</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <p class="card-text col "><b>Id: </b></p>
                    <p class="card-text col">
                        <%= user._id%>
                    </p>
                </div>
                <div class="row">
                    <p class="card-text col"><b>Email: </b></p>
                    <p class="card-text col">
                        <%= user.email %>
                    </p>
                </div>
                <div class="row">
                    <p class="card-text col"><b>Password: </b></p>
                    <p class="card-text col">
                        <%= user.password %>
                    </p>
                </div>
                <div class="row">
                    <p class="card-text col"><b>Nombres: </b></p>
                    <p class="card-text col">
                        <%= user.name %>
                    </p>
                </div>
                <div class="row">
                    <p class="card-text col"><b>Apellidos: </b></p>
                    <p class="card-text col">
                        <%= user.lastname %>
                    </p>
                </div>
            </div>
        </div>
    </div>